<div class="homer-header">

    {{#if search}}
    <h1>Você está buscando por {{search}}</h1>
    {{#if toughtsQty}}
    <p>Foram encontrados <span>{{toughtsQty}}</span></p>
    {{else}}
    <p>Nenhum pensamento foi encontrado para o termo <span>{{search}}</span></p>
    {{/if}}
    {{else}}
    <h1>Todos os Pensamentos</h1>
    {{/if}}

    <form action="/" method="get">
        <input type="text" name="search" placeholder="Está buscado por algo?">
        <input type="submit" value="buscar" class="btn">
    </form>
    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.seach}}">
            <input type="hidden" name="order" value="new">
            <button><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.seach}}">
            <input type="hidden" name="order" value="old">
            <button><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="toughts-container">
    {{#each toughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>por <span>{{this.User.name}}</span></figcaption>
        
        <a href="/toughts/comments/{{this.id}}" class="btn">Comentarios</a>

        <form action="/" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="submit" name="like" value="like">
        </form>
    </figure>
    {{/each}}
</div>