<div class="container-comments">
    <h2>Pensamentos</h2>
    <h2>{{ this.tought.title}}</h2>
    <div class="comments">
        <h3>Comentarios</h3>
        {{#if comments.length}}
        <ul>
            {{#each comments}}
            <li>{{this.commentText}}</li>
            {{/each}}
        </ul>
        {{else}}
        <p>Ainda não há comentários!</p>
        {{/if}}
    </div>
    <form action="/" method="POST">
        <div class="form-control">
            <label for="title">Comentario:</label>
            <input type="hidden" name="id" value='{{this.tought.title}}'>
            <input type="text" name="title" placeholder="Digite o seu comentario.....">
        </div>
        <input type="submit" value="Comentara">
    </form>
</div>